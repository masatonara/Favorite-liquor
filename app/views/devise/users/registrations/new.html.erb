<div class="registration-new container">
  <div class="row">
    <div class="col-lg-12">
      <div class="">

      <h2 class="top-content">新規ユーザー登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :"ユーザー名" %><br/>
            <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（再確認） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-2">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>


        <div class="col-12">
          <h4 class="label mt-2">ログインはこちらから</h4>
          <p class="new-link mt-2"><%=render "devise/users/shared/links" %> </p>
        </div>
        </div>
        </div>
    </div>
</div>