<table>
  <% @liquor.comments.each do |comment| %>
    <% comment_user = comment.user %>
    <tr>
    	<td>
    		<%= link_to user_path(comment_user), class: "user_#{comment_user.id}" do %>
      		<%= attachment_image_tag comment_user, :user_image, :fill, 50, 50, fallback: "no_image.jpeg", size: "50x50" %><br>
      		<%= comment_user.name %>
    		<% end %>
    	</td>
    	<td><%= comment.comment %></td>
    	<% if current_user == comment_user %>
      	<td><%= link_to 'Destroy', liquor_comment_path(comment.liquor_id, comment.id), method: :delete %></td>
    	<% end %>
    </tr>
  <% end %>
</table>
<%= form_with model:[@liquor,@comment], local: true do |f| %>
  <%= f.text_area :comment, size:"90x5" %><br>
  <%= f.submit '送信'%>
<% end %>