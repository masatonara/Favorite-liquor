<div class='container'>
  <div class='row'>
      <div class="col-md-12 edit-liquor">
        <%= render "layouts/error_messages", resource: @liquor %>

        <h1 class="edit-title alert alert-success">
          Edit Liquor
          <span class="badge badge-info">
            <i class="fas fa-glass-whiskey"></i>
          </span>
        </h1>

        <div class="liquor-edit-group">


      <%= form_with model:@liquor,local:true do |f| %>

        <div class="form-group">
          <%= f.label :写真 %>
          <%= f.attachment_field :liquor_image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :銘柄 %>
          <%= f.text_field :name,  class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :introduction,  class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :日付 %><br/>
          <%= f.date_field :day %>
        </div>


        <div class="form-group" id="star">
          <%= f.label :評価 %><br/>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <!--評価javascript-->
        <script>
          $('#star').raty({
            size:      36,
            starOff:   "<%= asset_path('star-off.png') %>",
            starOn:    "<%= asset_path('star-on.png') %>",
            starHalf:  "<%= asset_path('star-half.png') %>",
            scoreName: 'liquor[rate]',
            half:      true,
          });
        </script>

        <div class="form-group">
          <%= f.label :ジャンル %> <br/>
          <%= f.select :liquor_genre, [["ビール", "ビール"],["ワイン", "ワイン"],["焼酎", "焼酎"],["日本酒", "日本酒"],["ウイスキー", "ウイスキー"],["ブランデー", "ブランデー"],["カクテル", "カクテル"],["ラム", "ラム"],["ウォッカ", "ウォッカ"],["ジン", "ジン"],["テキーラ", "テキーラ"],["リキュール", "リキュール"],["その他", "その他"]],  :prompt => "選択してください" %>
        </div>

        <div class="form-group　rest1">
          <%= f.label :店名 %>
          <%= f.text_area :restaurant_name, class: "form-control"%>
        </div>


        <div class="form-group" >
          <%= f.label :住所 %>
          <%= f.text_area :address, class: "form-control" %>
        </div>

        <div class="form-group ">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <%= link_to liquor_path(@liquor), class: "book_#{@liquor.id}" do %>
        <i class="fas fa-backward"></i> 詳細ページに戻る
      <% end %>
  	</div>
  </div>
</div>

