<div class='container'>
  <div class='row'>
      <div class="col-md-12  mx-auto">
        <div class="liquor-post">
  		  <h1>投稿編集</h1>

      <%= form_with model:@liquor,local:true do |f| %>

        <div class="form-group">
          <%= f.label :写真 %>
          <%= f.attachment_field :liquor_image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :銘柄 %>
          <%= f.text_field :name,  class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :introduction,  class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :日付 %>
          <%= f.date_field :day %>
        </div>


        <div class="form-group" id="star">
          <%= f.label :評価 %>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <!--評価javascript-->
        <script>
          $('#star').raty({
            size:      36,
            starOff:   "<%= asset_path('star-off.png') %>",
            starOn:    "<%= asset_path('star-on.png') %>",
            starHalf:  "<%= asset_path('star-half.png') %>",
            scoreName: 'liquor[rate]',
            half:      true,
          });
        </script>

        <div class="form-group row">
          <%= f.label :"ジャンル", class: "col-sm-5 control-label" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name, prompt: "-- 選択してください --", class: "custom-select col-sm-7 genre_id") %>
        </div>

        <div class="form-group　rest1">
          <%= f.label :店名 %>
          <%= f.text_area :restaurant_name, class: "form-control"%>
        </div>


        <div class="form-group" >
          <%= f.label :住所 %>
          <%= f.text_area :restaurant_address, class: "form-control" %>
        </div>

        <div class="form-group ">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <%= link_to 'Show', liquor_path(@liquor), class: "book_#{@liquor.id}" %> |
  		<%= link_to 'Back', liquors_path, class: "back" %>
  	</div>
  </div>
</div>

