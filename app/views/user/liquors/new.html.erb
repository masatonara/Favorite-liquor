<div class="container">
  <div class="row">

<%= form_with model:@liquor,local:true do |f| %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.attachment_field :image, class: "form-control-file liquor_image" %>
  </div>

  <div class="form-group">
    <%= f.label :銘柄 %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :説明 %>
    <%= f.text_area :introduction, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.label :種類 %>
    <%= f.select :faculty, [["ウイスキー", "ウイスキー"], ["ワイン", "ワイン"], ["日本酒", "日本酒"], ["焼酎", "焼酎"]], include_blank: "選択して下さい" %>
  </div>

  <div class="form-group">
    <%= f.label :店名 %>
    <%= f.text_area :restaurant_name, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_area :restaurant_address, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.label :日付 %>
    <%= f.text_area :day, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.label :評価 %>
    <%= f.text_area :rating, class: 'form-control book_body' %>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
</div>
</div>