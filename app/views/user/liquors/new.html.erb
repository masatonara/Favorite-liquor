<div class="container">
  <div class="row">
    <div class="col-md-12 liquor-new">
      <%= render "layouts/error_messages", resource: @liquor %>
    <div class="liquor-new">

      <%= form_with model:@liquor,local:true do |f| %>

        <div class="form-group">
          <%= f.label :写真 %>
          <%= f.attachment_field :liquor_image, class: "form-control-file liquor_image" %>
        </div>

        <div class="form-group">
          <%= f.label :銘柄 %>
          <%= f.text_field :name,  placeholder: "名前", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :introduction,  placeholder: "good", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :日付 %><br/>
          <%= f.date_field :day %>
        </div>


        <div class="form-group" id="star">
          <%= f.label :評価 %><br/>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <!--評価javascript-->
        <script>
          $('#star').raty({
            size:      36,
            starOff:   "<%= asset_path('star-off.png') %>",
            starOn:    "<%= asset_path('star-on.png') %>",
            starHalf:  "<%= asset_path('star-half.png') %>",
            scoreName: 'liquor[rate]',
            half:      true,
          });
        </script>

       <div class="form-group genre">
        <%= f.label :ジャンル %><br/>
        <%= f.select :liquor_genre, [["ビール", "ビール"],["ワイン", "ワイン"],["焼酎", "焼酎"],["日本酒", "日本酒"],["ウイスキー", "ウイスキー"],["ブランデー", "ブランデー"],["カクテル", "カクテル"],["ラム", "ラム"],["ウォッカ", "ウォッカ"],["ジン", "ジン"],["テキーラ", "テキーラ"],["リキュール", "リキュール"],["その他", "その他"]],  :prompt => "選択してください" %>
       </div>


        <!-- お店記入欄。普段は隠す　-->
        <div class="shop-form-list">
          <label for="foo">飲んだお店も投稿する</label>
          <input type="checkbox" name="foo" id="foo" />
        </div>

        <div id="bar">

          <div class="form-group　rest1">
            <%= f.label :店名 %>
            <%= f.text_area :restaurant_name, placeholder: "店名", class: "form-control"%>
          </div>


          <div class="form-group" >
            <%= f.label :住所 %>
            <%= f.text_area :address, placeholder: "住所", class: "form-control" %>
          </div>

        </div>

        <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>

        <!-- チエックボタンが押されたら表示　-->
        <script>
        $(function(){
          $('input#foo[type=checkbox]').click(function() {
            if ($(this).prop('checked')) {
              $('#bar').show();
            } else {
              $('#bar').hide();
            }
          });
        });
        </script>

        <div class="form-group create-btn ">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>