<div class="container">
  <div class="row">

<%= form_with model:@liquor,local:true do |f| %>

  <div class="form-group">
    <%= f.label :写真 %>
    <%= f.attachment_field :liquor_image, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :銘柄 %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :説明 %>
    <%= f.text_area :introduction,  class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :種類 %>
    <%= f.select :faculty, [["ウイスキー", "ウイスキー"], ["ワイン", "ワイン"], ["日本酒", "日本酒"], ["焼酎", "焼酎"]], include_blank: "選択して下さい" %>
  </div>

  <div class="form-group">
    <%= f.label :店名 %>
    <%= f.text_area :restaurant_name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_area :restaurant_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :日付 %>
    <%= f.text_area :day %>
  </div>

  <div class="form-group">
    <%= f.label :評価 %>
    <%= f.text_area :rating %>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
</div>
</div>