<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% liquors.each do |liquor| %>
      <tr>
        <td><%= link_to user_path(liquor.user) do %>
          <%= attachment_image_tag(liquor.user, :image_id, :fill, 50, 50, fallback: "no_image.jpeg") %>
          <% end %>
        </td>
        <td><%= link_to liquor.name, liquor_path(liquor), class: "liquor_#{liquor.id}" %></td>
        <td><%= liquor.introduction %></td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", book: book %></td>
        <td>コメント数: <%= liquor.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>