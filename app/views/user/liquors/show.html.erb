<div class='container'>
  <div class='row'>
    
    <div class='col-md-8 offset-md-1'>
  		<h2>投稿詳細</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@liquor.user) do %>
            <%= attachment_image_tag(@liquor.user, :image_, :fill, 100, 100, fallback: "no_image.jpeg") %><br>
            <%= @liquor.user.name %>
            <% end %>
          </td>
          <td><%= link_to @liquor.title %></td>
          <td><%= @liquor.introduction %></td>
          <td class="favorite-btn"><%= render "favorites/btn", liquor: @liquor %></td>
          <td>コメント数: <%= @liquor.comments.count %></td>
          <% if @liquor.user == current_user %>
            <td><%= link_to 'Edit', edit_liquor_path(@liquor), class: "btn btn-sm btn-success edit_liquor_#{@liquor.id}" %></td>
            <td><%= link_to 'Destroy', liquor_path(@liquor), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_liquor_#{@liquor.id}"%></td>
          <% end %>
        </tr>
      </table>
      <%= render 'liquors/comment', liquor: @liquor,comment: @comment%>
    </div>
  </div>
</div>