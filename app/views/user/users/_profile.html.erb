 <div class="col-md-5 user-image">
   <div class="user-image-box">
    <%= attachment_image_tag user, :user_image, :fill, 150, 150, fallback: "no_image.jpg", size: "150x150" ,class:"rounded-circle"; %>
   </div>
  </div>
  <div class="col-md-7 user-profile-box">
    <div class="user-name d-flex align-items-start">
	      <div class="p-2">
	        <h3><i class="far fa-address-card"></i> <%= user.name %></h3>
	       </div>
	    <% if current_user != user %>
	    <div class="p-2">
	      <div id="follow-btn_<%= @user.id %>">
          <%= render 'user/relationships/follow-btn', user: @user %>
        </div>
      </div>
      <% else %>
      <div class="p-2">
        <div type="button" data-toggle="tooltip" data-placement="bottom" title="ユーザー編集">
          <%= link_to edit_user_path(user), class: "btn btn-outline-primary" do %>
            <i class="fas fa-user-edit"></i>
          <% end %>
        </div>
      </div>
      <% end %>
	  </div>

	  <div class="user-follow d-flex align-items-start">
	    <div class="p-2">
        <h5 id="followings-count_<%= user.id %>">follows: <%= link_to current_user.followings.count, user_followings_path(user) %></h5>
      </div>
      <div class="p-2">
        <h5 id="followers-count_<%= user.id %>">followers: <%= link_to user.followers.count, user_followers_path(user) %></h5>
      </div>

    </div>

	  <div class="user-introduction">
	    <h4 class="introduction-box">
	      <%= user.introduction %>
	     </h4>
	  </div>



