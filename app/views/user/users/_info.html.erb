<div class="user-box">
<div class="user-box1 d-flex align-items-start">
  <div class="p2">
    <%= attachment_image_tag user, :user_image, :fill, 100, 100, fallback: "no_image.jpg", :size =>'100x100', class:"rounded-circle"; %>
  </div>
  <div class="p-2">
	  <h4><%= user.name %></h4>
	</div>
	<div class="p-2">
	  <%= link_to '投稿', new_liquor_path, class: "btn btn-success mx-1" %>
	</div>
</div>

<table class="table">
  <tbody>
    <% @users.last(5).each do |user| %>
      <tr>
        <td>
          <%= link_to  user_path(user), class: "user_#{user.id}" do %>
            <%= attachment_image_tag user, :user_image, :fill, 50, 50, fallback: "no_image.jpg", :size =>'50x50'  %>
          <% end %>
        </td>
        <td>
          <strong><%= user.name %> </strong><br/>
          <p class="text-muted">おすすめユーザー</p>
        </td>
        <td id="follow-btn_<%= user.id %>">
          <% if current_user != user %>
            <%= render 'user/relationships/follow-btn', user: user %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>