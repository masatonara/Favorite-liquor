<div class="user-box d-flex align-items-start">
  <div class="p2">
    <%= attachment_image_tag user, :user_image, :fill, 100, 100, fallback: "no_image.jpg", :size =>'100x100', class:"rounded-circle"; %>
  </div>
  <div class="p-2">
	  <h4><%= user.name %></h4>
	</div>
</div>

<table class="table">
  <tbody>
    <% @random.each do |user| %>
      <tr>
        <td>
          <%= link_to  user_path(user), class: "user_#{user.id}" do %>
            <%= attachment_image_tag(user,:user_image, :fill, 50, 50, fallback: "no_image.jpeg", :size =>'50x50') %>
          <% end %>
        </td>
        <td>
          <strong><%= user.name %> </strong><br/>
          <p class="text-muted">オススメユーザー</p>
        </td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id),class: "btn btn-primary", method: :delete %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id),class: "btn btn-info", method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>