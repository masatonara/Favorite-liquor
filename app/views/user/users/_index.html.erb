<table class='table'>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to  user_path(user), class: "user_#{user.id}" do %>
            <%= attachment_image_tag user,:user_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", :size =>'100x100'  %>
          <% end %>
        </td>
        <td><strong><%= user.name %> </strong></td>
        <td id='followings-count_<%= user.id %>'>
         follows: <%= link_to user.followings.count, user_followings_path(user) %>
        </td>
        <td id='followers-count_<%= user.id %>'>
         followers: <%= link_to user.followers.count, user_followers_path(user) %>
        </td>
        <td id="follow-btn_<%= user.id %>" >
          <% if current_user != user %>
           <%= render 'user/relationships/follow-btn', user: user %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
