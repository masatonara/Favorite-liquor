<% liquors.each do |liquor| %>
 <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to liquor_path(liquor) do %>
      <%= attachment_image_tag liquor, :liquor_image, :fill, 100, 100, fallback: "no_image.jpeg", class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(liquor.user)  do %>
            <%= attachment_image_tag liquor.user, :user_image, :fill, 50, 50, fallback: "no_image.jpeg", class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
              <strong><i class="far fa-flag"></i><span> <%= liquor.name %></span></strong>
          </p>
          <p class="card-text">説明：<%= liquor.introduction %></p>
          <%= render "user/favorites/btn", liquor: liquor %>
          コメント数: <%= liquor.comments.count %>
        </div>
      </div>
    </div>
  </div>
  <% end %>